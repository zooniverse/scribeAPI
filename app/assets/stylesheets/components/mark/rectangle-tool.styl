.rectangle-tool

  // BUTTON STYLES
  .resize-button
    cursor grab
    cursor -webkit-grab
    &:active
      cursor grabbing
      cursor -webkit-grabbing

  .delete-button
    cursor pointer

  .mark-button
    cursor pointer

  // SHAPE STYLES
  .tool-shape
    cursor grab
    cursor -webkit-grab

    stroke-width 3
    stroke rgba(100,100,0,1)
    fill transparent
    // stroke-opacity 0.3 // PB this is compounding other opacities, making it almost invisible!
    // transition stroke-opacity 0.2s ease

    &:active
      cursor grabbing
      cursor -webkit-grabbing

    &.transcribable
      stroke rgb(67, 187, 253)
      stroke-opacity 1

    &.interim
      opacity 0.35

    // mark is committed and uneditable
    &.committed
      cursor default
      &:hover
        stroke-opacity 1
        transition-delay 0.5s // too distracting when immediate

    // mark has not yet been committed
    &.uncommitted
      stroke #fc5424

.rectangle-tool .tool-shape.committed.transcribable:hover
  fill: rgba(55,58,204,.4);
  transition-delay 0.0s
