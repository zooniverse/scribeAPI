<h1>All Users</h1>

<%= paginate @users %>

<table class="dashboard-table" id="subjects-table" width="100%">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Email</th>
    <th>Classifications</th>
    <th>Provider</th>
    <th>Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><% if current_user.admin? && user.avatar %>
        <%= link_to admin_user_path(user) do %><img src="<%= user.avatar %>" /><% end %></td>
      <% end %>
    </td>
    <td><%= link_to admin_obf(user.name), admin_user_path(user) %></td>
    <td><%= link_to admin_obf(user.email), admin_user_path(user) %></td>
    <td><%= link_to user.classifications.count, admin_user_path(user) %></td>
    <td><% if user.provider %><%= link_to user.provider, admin_user_path(user) %><% end %></td>
    <td><%= link_to user.role, admin_user_path(user) %></td>
  </tr>
<% end %>
</table>

<%= paginate @users %>
