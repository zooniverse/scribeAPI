<h1>All Subjects</h1>

<table class="dashboard-table" id="subjects-table" width="100%">
  <tr>
    <th></th> 
    <th>Status</th>
    <th>Classification Count</th>
    <th>Secondary Subject</th>
    <th>Child_Subjects</th>
    <th>Retire Count</th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%= link_to admin_subject_path(subject) do %><img src="<%= subject.location["thumbnail"] %>" width="100"/><% end %></td>
    <td><%= link_to admin_subject_path(subject) do %><%= subject.status %><% end %></td>
    <td> <%= subject.classification_count %> </td> 
    <td> <%= subject.secondary_subject_count %> </td> 
    <td> 
      <% if ! subject.child_subjects.empty? %>
        <% subject.child_subjects.each do |child| %>
          <%= child.type %>
        <% end %>
      <% end %>
    <td> <%= subject.retire_count %> </td> 
  </tr>
<% end %>
</table>

