
<div class="dashboard">
  <%= link_to '#', onclick: "window.stats.recalculateStats();", class: 'recalculate-stats' do %>Recalculate Stats<% end %>

  <div class="row">

    <div class="classifications category">
      <h3 class="title">Classifications</h3>

      <div class="units">
        <button class="active" data-category="classifications" data-group-by="hour">Hourly</button>
        <button data-category="classifications" data-group-by="day">Daily</button>
        <button data-category="classifications" data-group-by="week">Weekly</button>
      </div>

      <div class="total">
        <span class="count">0</span>
        <span class="label">Total</span>
      </div>

      <div class="chart"></div>
    </div>

    <div class="users category">
      <h3 class="title">Users</h3>

      <div class="units">
        <button data-category="users" class="active" data-group-by="hour">Hourly</button>
        <button data-category="users" data-group-by="day">Daily</button>
        <button data-category="users" data-group-by="week">Weekly</button>
      </div>

      <div class="total">
        <span class="count">0</span>
        <span class="label">Total</span>
      </div>

      <div class="chart"></div>
    </div>

  </div>

